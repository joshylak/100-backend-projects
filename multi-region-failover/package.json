{
  "name": "multi-region-failover",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start:region-a": "node src/region-server.js --port=3001 --region=A",
    "start:region-b": "node src/region-server.js --port=3002 --region=B",
    "start:proxy": "node src/failover-proxy.js",
    "start:all": "concurrently \"npm run start:region-a\" \"npm run start:region-b\" \"npm run start:proxy\"",
    "start": "node index.js"
  },
  "dependencies": {
    "express": "^4.18.0",
    "http-proxy": "^1.18.1",
    "concurrently": "^8.0.0"
  }
}